<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Product</title>
   
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <a class="btn btn-secondary btn-sm" href="/">Add Product </a>
            </li>
            <li class="nav-item">
                <a class="btn btn-primary" href="/getproduct">Get Product</a>
              </li>
            <li class="nav-item">
                <button class="btn btn-secondary btn-sm" id="myproduct">My NFT</button>
            </li>
            <li class="nav-item">
                <a class="btn btn-secondary btn-sm" href="/searchclaim">Claim Token</a>
            </li>
          </ul>
        </div>
      </nav>

    <button id="connect-wallet" class="btn btn-success">Click to connect metamask</button>


                <table border="2" cellspacing="0">
                    <tr>
                        <td colspan="9" align="center">
                            <h1>Product Detail</h1>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="9" align="center"><b>Product</b></td>
                    </tr>
                    <tr align="center">
                        <td><b>Productid</b></td>
                        <td><b>Owner</b></td>
                        <td><b>Price</b></td>
                        <td><b>Uri</b></td>
                        <td><b>Timeline</b></td>
                        <td><b>Bid Account</b></td>
                        <td><b>LastBiding</b></td>
                        <td><b>Action</b></td>
                    </tr>
                    <%user.forEach((y)=>{%>
                        <tr>
                            <td>
                                <%=y.tokenid%>
                            </td>
                            <td>
                                <%=y.account%>
                            </td>
                            <td>
                                <%=y.price%>
                            </td>
                            <td>
                                <img src='<%=y.uri%>' width="100" height="100"/>
                            </td>
                            <td>
                                <%=y.timeline%>
                            </td>
                            <td>
                                <%=y.bidaccount%>
                            </td>
                            <td>
                                <%=y.lastbiding%>
                            </td>
                            
                            <%if(y.saletype=="0" ){%>
                                <td><a href="/bidproduct/<%=y.tokenid%>">Bid</a></td>
                                <%}else{%>
                                    <td><a href="/buyproduct/<%=y.tokenid%>">Buy</a></td>
                                    <%}%>
                        </tr>
                        <%})%>
            </table>
    
    <script src="https://cdn.ethers.io/lib/ethers-5.2.umd.min.js" type="application/javascript"></script>
    
    <script src="../public/script.js"></script>

</body>


</html>